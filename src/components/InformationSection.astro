---
interface Props {
    title: string;
    body: string;
    imageDirection?: string;
};

let { title, body, imageDirection } = Astro.props;

// default value
imageDirection = imageDirection ?? "right" as string;
---

<article class="flex flex-col md:flex-row justify-center md:flex-justify-between items-center gap-7">
    {imageDirection === "right" as string ? "" : (
        <div class="spaceman-background w-full sm:w-full md:w-[50%] lg:w-[50%] xl:w-[50%] h-[40rem] flex justify-center items-center rounded-md"></div>
    )}

    <div class="w-full sm:w-full md:w-[50%] lg:w-[50%] xl:w-[50%] flex flex-col justify-center items-start rounded-md gap-y-6">
        <h3 class="text-left text-6xl font-extrabold">
            {title}
        </h3>
        <p class="text-justify font-normal text-md">
            {body}
        </p>
    </div>

    {imageDirection === "left" as string ? "" : (
        <div class="spaceman-background w-full sm:w-full md:w-[50%] lg:w-[50%] xl:w-[50%] h-[40rem] flex justify-center items-center rounded-md"></div>
    )}
</article>

<style scoped>
.spaceman-background {
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    background-image: url("/app-k4n-landing/assets/images/spaceman.png");
}
</style>